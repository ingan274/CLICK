<div class="container formDiv">
    <form class="form-inline">
        <label for="gender">Gender</label>
        <select class="form-control" id="gender">
            <option>Male</option>
            <option>Female</option>
            <option>Transgender</option>
            <option>Other</option>
        </select>

        <label for="gender">Age</label>
        <input type="text" class="form-control" id="minAge" placeholder="Minimum Age">
        <input type="text" class="form-control" id="maxAge" placeholder="Maximum Age">

        <label for="gender">Height</label>
        <input type="text" class="form-control" id="minFt" placeholder="Minimum Height (ft)">
        <input type="text" class="form-control" id="minInch" placeholder="(inch)">
        <input type="text" class="form-control" id="maxFt" placeholder="Maxium Height (ft)">
        <input type="text" class="form-control" id="maxInch" placeholder="(inch)">

        <label for="location">Location</label>
        <select class="form-control" id="location">
            {{#each location}}
            <option>{{dataValues.location}}, {{dataValues.city}}</option>
            {{/each}}
        </select>

        <label for="Drink">Drink Frequency</label>
        <select class="form-control" id="location">
            {{#each drinks}}
            <option>{{dataValues.drink}}</option>
            {{/each}}
        </select>

        <button type="submit" class="btn btn-primary mb-2">CLICK</button>
    </form>
</div>

<section class="container-fluid">
    <div class="results">
        {{#each results}}
        {{> results}}
        {{/each}}
    </div>
</section>