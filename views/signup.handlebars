<div class="signupDIV">
    
    <form id="signup" name="signup" method="post" action="/signup">
    <h1 class="titleSign">Sign Up</h1>
        <label for="email">Email Address</label>
        <input class="text emailEntry" name="email" type="email" />
        <br>
        <label for="firstname">First Name   </label>
        <input class="text" name="firstname" type="text" />
        <br>
        <label for="lastname">Last Name   </label>
        <input class="text" name="lastname" type="text" />
        <br>
        <label for="password">Password    </label>
        <input class="text" name="password" type="password" />
         <br>
        <input class="btn" id="signUpBtn" type="submit" value="Sign Up" />
    </form>

    <div>
        <button id="sign-inBtn" class="btn signIn"> Sign In </button>
    </div>
</div>
<script type="text/javascript">
    $("#sign-inBtn").on("click", function () {
        $.ajax({
            method: "GET",
            url: "/",
        })
            .then(function () {
                window.location.href = "/";
            });
    });
</script>